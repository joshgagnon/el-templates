{% extends 'letter.njk' %}

{% import 'partials/macros.njk' as macros %}


{% block salutation %}For:{% endblock %}
{% block letterBody %}

<text:p text:outline-level="1" text:style-name="el_heading">
    {% if clientrecipientType == 'company' %}
    {{ client['contact'] }} (“the Borrower”)
    {% else %}
    {{ client.individuals|join_and('firstName', 'surname') }}
    {% if client.individuals|length > 0 %} (“the Borrower”) {% else %} (“the Borrowers”) {% endif %}
    {% endif %}
    - {{ matter.conveyancing.matterType | title }} of
    {{ matter.assets|join_and('address') }} (“the Property”)

</text:p>

<text:p text:style-name="para">
We <text:span text:style-name="bold">enclose</text:span> in relation to the Borrowers’ {{ matter.conveyancing.matterType }} of the Property, the following documents:

</text:p>

<text:list text:style-name="el_numbered_list">
    {% for document in documents %}
    <text:list-item>
        <text:p text:style-name="el_numbered_list_paragraph">
            <text:span >{{ document.documentName }}</text:span>
        </text:p>
    </text:list-item>

    {% endfor %}


</text:list>


{% endblock %}