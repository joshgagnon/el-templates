{
    "title": "Letter of Demand - Debtor",
    "formName": "letter_of_demand_debtor",
    "baseDoc": "letter.odt",
    "calculations": ["letter_of_demand"],
    "properties": {
        "dateString": {
            "title": "Date",
            "type": "string",
            "formatDate": "D MMMM YYYY",
            "x-hints" : {
                "form": {
                  "inputComponent": "date"
                }
            }
        },
        "recipient": {
             "$ref": "#/definitions/recipient",
             "title": "Debtor (recipient)"
        },
        "matter": {
            "type": "object",
            "properties": {
                "matterId": {
                    "title": "Matter ID",
                    "type": "string"
                }
            }
        },
        "creditor": {
            "type": "string",
            "title": "Name of Creditor"
        },
        "documentName": {
            "type": "string",
            "title": "Name of Document",
            "description": "Name of document under which debt arises"
        },
        "documentDate": {
            "title": "Date of Document",
            "type": "string",
            "formatDate": "D MMMM YYYY",
            "x-hints": {
                "form": {
                    "inputComponent": "date"
                }
            }
        },
        "debtDate": {
            "title": "Date Debt Calculated",
            "formatDate": "D MMMM YYYY",
            "type": "string",
            "x-hints": {
                "form": {
                    "inputComponent": "date"
                }
            }
        },
        "totalIndebtedness": {
            "title": "Total Indebtedness",
            "type": "number",
            "minimum": 0,
            "maximum": 100000000
        },
        "breakdown": {
            "type": "object",
            "title": "Breakdown",
            "properties": {
                "show": {
                    "title": "Show Breakdown",
                    "enum": ["No", "Yes"]
                }
            },
            "oneOf": [{
                    "properties": {
                        "show": {
                            "enum": ["No"]
                        }
                    }
                },{
                    "properties": {
                        "show": {
                            "enum": ["Yes"]
                        },
                        "principalSum": {
                            "type": "object",
                            "properties": {
                                "amount": {
                                    "title": "Principal Sum Amount",
                                    "type": "number",
                                    "minimum": 0,
                                    "maximum": 100000000,
                                    "description": "Principal sum owing under the Agreement"
                                }
                            },
                            "required": ["amount"]
                        },
                        "userDefined": {
                            "type": "array",
                            "title": "User Defined Line Items",
                            "items": {
                                "type": "object",
                                "properties": {
                                    "description": {
                                        "title": "Description",
                                        "type": "string"
                                    },
                                    "amount": {
                                        "title": "Amount",
                                        "type": "number",
                                        "minimum": 0,
                                        "maximum": 100000000
                                    }
                                },
                                "required": [
                                    "description", "amount"
                                ]
                            },
                            "description": "Eg. Interest, collection costs"
                        }
                    },
                    "required": ["principalSum"]
                }],
            "x-hints": {
                "form": {
                    "selector": "show"
                }
            }
        },
        "interestIncluded": {
            "type": "boolean",
            "title": "Interest Amount Included",
            "description": "Interest continues to accrue on the outstanding amount in accordance with the Agreement"
        },
        "deadline": {
            "title": "Deadline for Payment",
            "formatDate": "D MMMM YYYY",
            "type": "string",
            "x-hints": {
                "form": {
                    "inputComponent": "date"
                }
            }
        },
        "secuiredDebt": {
            "type": "boolean",
            "title": "Is Secured Debt"
        }
    },
    "required": [
        "creditor", "debtor", "documentName", "documentDate", "breakdown", "totalIndebtedness", "debtDate"
    ]
}